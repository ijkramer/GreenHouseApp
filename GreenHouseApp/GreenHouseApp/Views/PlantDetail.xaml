<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHouseApp.Views.PlantDetail"
             BackgroundColor="NavajoWhite">
    <StackLayout Padding="20" Spacing="15" BackgroundColor="#FFFFFFCC" Margin="20">
        <Frame BackgroundColor="White" CornerRadius="20" Padding="20" HasShadow="True">
            <StackLayout Spacing="10">
                <Label Text="Plant Detail" FontSize="28" HorizontalOptions="Center" TextColor="DarkGreen" FontAttributes="Bold"/>
                <Label Text="Name:" FontSize="18" TextColor="DarkGreen" FontAttributes="Bold"/>
                <Label x:Name="plantName" FontSize="18" TextColor="DarkSlateGray"/>
                <Label Text="Days between watering:" FontSize="18" TextColor="DarkGreen" FontAttributes="Bold"/>
                <Label x:Name="plantWaterDays" FontSize="18" TextColor="DarkSlateGray"/>
                <Label Text="Description:" FontSize="18" TextColor="DarkGreen" FontAttributes="Bold"/>
                <Label x:Name="plantDescription" FontSize="18" TextColor="DarkSlateGray"/>
                <Button Text="Delete" BackgroundColor="Red" TextColor="White" FontAttributes="Bold" Clicked="DeletePlant"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
