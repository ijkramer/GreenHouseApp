<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHouseApp.MainPage"
             BackgroundColor="NavajoWhite">
    <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="Start" Padding="10" Margin="0,10,0,0">
        <Label Text="Green House App" FontSize="24" HorizontalOptions="Center" TextColor="Black" Margin="0,10,0,10"/>
        <ScrollView Orientation="Vertical">
            <StackLayout x:Name="TodoItemsStack">
            </StackLayout>
        </ScrollView>
        <Button x:Name="AddBtn"
                Text="ADD"
                CornerRadius="10"
                FontSize="Large"
                TextColor="PaleVioletRed"
                BackgroundColor="White"
                FontAttributes="Bold"
                WidthRequest="100"
                HeightRequest="50"
                Margin="5,0"
                Clicked="NavigateToAdd"
                VerticalOptions="End"/>
    </StackLayout>
</ContentPage>